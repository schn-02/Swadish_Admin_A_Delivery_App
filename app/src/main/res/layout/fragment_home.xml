<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/black"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Fragments.HomeFragment">



    <androidx.appcompat.widget.Toolbar
     android:layout_width="match_parent"
     android:id="@+id/toolbar_HomeFragment"
     android:layout_height="wrap_content"
     android:background="@color/yellow">
     <TextView
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="Home"
         android:textStyle="bold"
         android:textSize="20sp"
         android:textColor="@color/white"/>
 </androidx.appcompat.widget.Toolbar>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/black"
        android:layout_margin="10dp"
        android:layout_marginTop="10dp"
        >

        <EditText
            android:id="@+id/search"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:drawableLeft="@drawable/search1"
            android:drawablePadding="10dp"
            android:hint="Search"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:textSize="20sp"
            android:textStyle="bold" />
    </com.google.android.material.card.MaterialCardView>

<androidx.recyclerview.widget.RecyclerView
    android:id="@+id/recyclerHomeFragment"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerHomeFragment2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
        app:spanCount="2" />


    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/homelottie"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_marginBottom="70dp"
        app:lottie_autoPlay="true"
        android:visibility="gone"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/nocategory" />

    <com.facebook.shimmer.ShimmerFrameLayout
        android:layout_width="match_parent"
        android:id="@+id/shimmer"
        android:visibility="visible"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
android:orientation="vertical"
            >
        <include layout="@layout/simmer_layout"/>
        <include layout="@layout/simmer_layout"/>
        <include layout="@layout/simmer_layout"/>
        <include layout="@layout/simmer_layout"/>

        </LinearLayout>
    </com.facebook.shimmer.ShimmerFrameLayout>



    </LinearLayout>



